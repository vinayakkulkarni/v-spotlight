    "jasmine-core": "^3.1.0",
    "karma": "^2.0.2",
    "karma-browserify": "^5.2.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "phantomjs-prebuilt": "^2.1.16",
    "karma-jasmine": "^1.1.2",
    "karma-spec-reporter": "^0.0.32",
    "rollup": "^0.59.3",
    "rollup-plugin-babel": "^3.0.4",
    "rollup-plugin-uglify": "^4.0.0",
    "rollup-plugin-vue": "^4.2.0",
    "vue": "^2.5.16",
